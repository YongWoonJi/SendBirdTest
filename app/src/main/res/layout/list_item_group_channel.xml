<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:text="Name"
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black_01"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageProfile"
        android:layout_toRightOf="@+id/imageProfile"
        android:layout_toEndOf="@+id/imageProfile"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@drawable/round_position"
        android:layout_alignTop="@+id/textName"
        android:layout_toRightOf="@+id/textName"
        android:layout_toEndOf="@+id/textName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="3dp"
        android:paddingStart="3dp"
        android:paddingRight="3dp"
        android:paddingEnd="3dp">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="9dp"
            android:src="@drawable/icon_people"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:text="26"
            android:id="@+id/textMember"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="11sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="0.5dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#888888"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/textName"
        android:layout_alignLeft="@+id/textName"
        android:layout_alignStart="@+id/textName"
        android:layout_toLeftOf="@+id/textTime"
        android:layout_toStartOf="@+id/textTime" />

    <TextView
        android:text="PM 4:25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#aaaaaa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/textTime" />

    <TextView
        android:text="32"
        android:id="@+id/textNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/white_01"
        android:gravity="center"
        android:background="@drawable/round_drawable"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="-3dp"
        android:layout_alignTop="@+id/textContent"
        android:layout_alignRight="@+id/textTime"
        android:layout_alignEnd="@+id/textTime" />


</RelativeLayout>